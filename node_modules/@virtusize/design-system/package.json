{
  "name": "@virtusize/design-system",
  "version": "0.1.0",
  "author": "Virtusize",
  "private": true,
  "description": "Design Guidelines and Components for unified UI across Virtusize applications",
  "homepage": "https://github.com/virtusize/design-system",
  "main": "dist/lib/index.js",
  "files": [
    "dist/lib",
    ".postcssrc"
  ],
  "scripts": {
    "test": "NODE_ENV=test jest",
    "start": "npm run storybook > /dev/null 2>&1 | npm run standalone-preview > /dev/null 2>&1 | npm run typecheck || true",
    "storybook": "start-storybook --ci --port=8080 --no-dll --preview-url=http://localhost:8081/iframe.html",
    "standalone-preview": "parcel .storybook/standalone-preview.html --port 8081 --out-dir .cache/standalone-preview",
    "typecheck": "tsc --noEmit --watch",
    "copy-css": "cpx 'src/**/*.css' dist/lib",
    "copy-postcss-config": "cp .postcssrc.dist dist/lib/.postcssrc",
    "extract-types": "tsc --p tsconfig.tsc.json --emitDeclarationOnly",
    "babel-compile": "babel src --out-dir dist/lib --extensions .ts,.tsx --ignore **/*.test.tsx,**/*.stories.tsx,**/utils/*.tsx",
    "build": "rm -rf dist/lib && npm run extract-types && npm run babel-compile && npm run copy-css && npm run copy-postcss-config",
    "build-storybook": "build-storybook --no-dll --output-dir dist/storybook > /dev/null 2>&1 || parcel build .storybook/standalone-preview.html --out-dir dist/storybook --out-file iframe.html --no-cache"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-typescript": "^7.7.4",
    "@storybook/addon-knobs": "^5.2.8",
    "@storybook/addon-viewport": "^5.2.8",
    "@types/common-tags": "^1.8.0",
    "@types/jest": "^24.0.23",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^12.12.17",
    "@types/prismjs": "^1.16.0",
    "@types/prop-types": "^15.7.3",
    "@virtusize/storybook-app-vue-next": "^5.3.9",
    "@vue/babel-preset-jsx": "^1.1.2",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-preset-vca-jsx": "^0.3.4",
    "babel-upgrade": "^1.0.1",
    "common-tags": "^1.8.0",
    "core-js": "^3.6.4",
    "cpx": "^1.5.0",
    "csstype": "^2.6.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "parcel-bundler": "^1.12.4",
    "postcss-fail-on-warn": "^0.1.0",
    "postcss-modules": "^1.4.1",
    "postcss-preset-env": "^6.7.0",
    "prismjs": "^1.17.1",
    "svgo": "^1.3.2",
    "typescript": "^3.7.3",
    "typescript-plugin-css-modules": "^2.1.2",
    "whatwg-fetch": "^3.0.0"
  },
  "dependencies": {
    "@vue/composition-api": "^0.3.4",
    "lodash.debounce": "^4.0.8",
    "vue": "^2.6.11"
  },
  "browserslist": "> 1%, last 2 versions, not ie <= 8",
  "jest": {
    "moduleNameMapper": {
      "\\.(css|html)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.stories.tsx",
      "!src/**/index.ts",
      "!src/utils/*.*"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx",
      "node",
      "html"
    ]
  }
}
